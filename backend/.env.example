# ==============================================
# AI Scrum Master Platform - Environment Variables
# ==============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
MONGO_URL=mongodb://127.0.0.1:27017
DB_NAME=ai_scrum_master

# ==============================================
# AI/ML SERVICE INTEGRATIONS
# ==============================================
# OpenAI Configuration (Required for Core Features)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4096

# Voice Transcription (Optional - uses OpenAI Whisper)
WHISPER_MODEL=whisper-1

# ==============================================
# PROJECT MANAGEMENT INTEGRATIONS (Phase 2)
# ==============================================
# Jira Integration
JIRA_SERVER_URL=https://your-company.atlassian.net
JIRA_USERNAME=your-email@company.com
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=PROJ

# Linear Integration (Alternative to Jira)
LINEAR_API_KEY=your-linear-api-key
LINEAR_TEAM_ID=your-team-id

# ==============================================
# COMMUNICATION PLATFORM INTEGRATIONS (Phase 2)
# ==============================================
# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_WORKSPACE_ID=T1234567890
SLACK_CHANNEL_STANDUP=#daily-standup
SLACK_CHANNEL_ALERTS=#alerts

# Microsoft Teams (Alternative to Slack)
TEAMS_WEBHOOK_URL=https://your-org.webhook.office.com/webhookb2/your-webhook-id
TEAMS_BOT_ID=your-teams-bot-id

# ==============================================
# VERSION CONTROL INTEGRATIONS (Phase 2)
# ==============================================
# GitHub Integration
GITHUB_TOKEN=ghp_your-github-personal-access-token
GITHUB_OWNER=your-username-or-org
GITHUB_REPO=your-repository-name

# GitLab Integration (Alternative to GitHub)
GITLAB_TOKEN=glpat-your-gitlab-access-token
GITLAB_PROJECT_ID=12345678

# ==============================================
# DOCUMENTATION INTEGRATIONS (Phase 2)
# ==============================================
# Confluence Integration
CONFLUENCE_BASE_URL=https://your-company.atlassian.net/wiki
CONFLUENCE_USERNAME=your-email@company.com
CONFLUENCE_API_TOKEN=your-confluence-api-token
CONFLUENCE_SPACE_KEY=DEV

# Notion Integration (Alternative to Confluence)
NOTION_API_KEY=secret_your-notion-integration-token
NOTION_DATABASE_ID=your-database-id

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
# Server Configuration
PORT=8001
HOST=0.0.0.0
NODE_ENV=development

# CORS and Security
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8001
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# Session and Security
SECRET_KEY=your-super-secret-key-for-sessions
JWT_SECRET=your-jwt-secret-key
SESSION_TIMEOUT=3600

# ==============================================
# LOGGING AND MONITORING
# ==============================================
# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=/var/log/ai_scrum_master.log

# External Monitoring (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
DATADOG_API_KEY=your-datadog-api-key

# ==============================================
# EMAIL NOTIFICATIONS (Phase 2)
# ==============================================
# SendGrid or SMTP Configuration
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@company.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourcompany.com

# ==============================================
# RATE LIMITING AND PERFORMANCE
# ==============================================
# API Rate Limiting
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW=900

# OpenAI Rate Limiting
OPENAI_REQUESTS_PER_MINUTE=60
OPENAI_TOKENS_PER_MINUTE=150000

# ==============================================
# FEATURE FLAGS (Phase 2+)
# ==============================================
ENABLE_VOICE_INPUT=true
ENABLE_JIRA_INTEGRATION=false
ENABLE_SLACK_INTEGRATION=false
ENABLE_GITHUB_INTEGRATION=false
ENABLE_AI_INSIGHTS=true
ENABLE_ANALYTICS_DASHBOARD=true

# ==============================================
# DEVELOPMENT/DEBUG SETTINGS
# ==============================================
DEBUG=false
ENABLE_API_DOCS=true
ENABLE_CORS=true
VERBOSE_LOGGING=false
MOCK_AI_RESPONSES=false